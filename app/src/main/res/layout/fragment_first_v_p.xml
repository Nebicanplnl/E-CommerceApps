<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.screens.onboarding.FirstVP">

    <TextView
        android:id="@+id/introTitleText"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/discover_something_new"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/introDescText"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"

        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/special_new_arrivals_just_for_you"
        android:textSize="19sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/introFirstVP"
        android:layout_width="290dp"
        android:layout_height="490dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:background="@color/intro_card_color"
        android:elevation="36dp"
        app:cardCornerRadius="13dp">

        <ImageView
            android:id="@+id/introFirstVPImage"
            android:layout_width="289dp"
            android:layout_height="465dp"
            android:layout_gravity="center"
            android:src="@drawable/vp1" />

    </androidx.cardview.widget.CardView>

</LinearLayout>